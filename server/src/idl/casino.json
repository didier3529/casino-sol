{
  "version": "0.1.0",
  "name": "casino",
  "instructions": [
    {
      "name": "initialize",
      "docs": [
        "Initialize the casino with configuration",
        "Creates CasinoConfig PDA and Vault PDA"
      ],
      "accounts": [
        {
          "name": "casino",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "vault",
          "isMut": true,
          "isSigner": false,
          "docs": [
            "Vault PDA (SystemAccount) that holds all bets"
          ]
        },
        {
          "name": "authority",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "minBet",
          "type": "u64"
        },
        {
          "name": "maxBet",
          "type": "u64"
        },
        {
          "name": "initialVaultAmount",
          "type": "u64"
        }
      ]
    },
    {
      "name": "placeBet",
      "docs": [
        "Place a bet on any casino game",
        "Atomic: transfers SOL to vault, initializes session, requests randomness"
      ],
      "accounts": [
        {
          "name": "casino",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "session",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "vault",
          "isMut": true,
          "isSigner": false,
          "docs": [
            "Vault PDA that receives the bet"
          ]
        },
        {
          "name": "player",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        },
        {
          "name": "rent",
          "isMut": false,
          "isSigner": false
        },
        {
          "name": "clock",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "gameType",
          "type": {
            "defined": "GameType"
          }
        },
        {
          "name": "choice",
          "type": "u8"
        },
        {
          "name": "betAmount",
          "type": "u64"
        }
      ]
    },
    {
      "name": "fulfillRandomness",
      "docs": [
        "Fulfill randomness and resolve game session",
        "Called by oracle (mock for localnet, Switchboard for devnet/mainnet)"
      ],
      "accounts": [
        {
          "name": "casino",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "session",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "vault",
          "isMut": true,
          "isSigner": false,
          "docs": [
            "Vault PDA that pays out winnings"
          ]
        },
        {
          "name": "player",
          "isMut": true,
          "isSigner": false,
          "docs": [
            "Player receives payout if they win"
          ]
        },
        {
          "name": "caller",
          "isMut": false,
          "isSigner": true,
          "docs": [
            "Authority or Switchboard oracle (depending on mock vs real VRF)"
          ]
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        },
        {
          "name": "clock",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "randomValue",
          "type": {
            "array": [
              "u8",
              32
            ]
          }
        }
      ]
    },
    {
      "name": "refundExpired",
      "docs": [
        "Refund expired session to player"
      ],
      "accounts": [
        {
          "name": "casino",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "session",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "vault",
          "isMut": true,
          "isSigner": false,
          "docs": [
            "Vault PDA that refunds the bet"
          ]
        },
        {
          "name": "player",
          "isMut": true,
          "isSigner": false,
          "docs": [
            "Player receives bet refund"
          ]
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        },
        {
          "name": "clock",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": []
    },
    {
      "name": "drainVault",
      "docs": [
        "Dev-only: Drain vault to authority (for testing)"
      ],
      "accounts": [
        {
          "name": "casino",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "vault",
          "isMut": true,
          "isSigner": false,
          "docs": [
            "Vault PDA being drained"
          ]
        },
        {
          "name": "authority",
          "isMut": true,
          "isSigner": true,
          "docs": [
            "Casino authority receives the drained funds"
          ]
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "amount",
          "type": "u64"
        }
      ]
    }
  ],
  "accounts": [
    {
      "name": "CasinoConfig",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "authority",
            "docs": [
              "Authority that can update config and withdraw from vault"
            ],
            "type": "publicKey"
          },
          {
            "name": "vaultBump",
            "docs": [
              "Vault PDA bump (stored for CPI signing)"
            ],
            "type": "u8"
          },
          {
            "name": "minBet",
            "docs": [
              "Minimum bet amount in lamports"
            ],
            "type": "u64"
          },
          {
            "name": "maxBet",
            "docs": [
              "Maximum bet amount in lamports"
            ],
            "type": "u64"
          },
          {
            "name": "totalGames",
            "docs": [
              "Total number of games played (used for game_id generation)"
            ],
            "type": "u64"
          },
          {
            "name": "totalVolume",
            "docs": [
              "Total volume wagered in lamports"
            ],
            "type": "u64"
          },
          {
            "name": "totalPayouts",
            "docs": [
              "Total payouts made in lamports"
            ],
            "type": "u64"
          },
          {
            "name": "isActive",
            "docs": [
              "Casino is active (can be paused for maintenance)"
            ],
            "type": "bool"
          },
          {
            "name": "switchboardFunction",
            "docs": [
              "Switchboard function account (optional, for VRF requests)"
            ],
            "type": {
              "option": "publicKey"
            }
          }
        ]
      }
    },
    {
      "name": "GameSession",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "player",
            "docs": [
              "Player's wallet pubkey"
            ],
            "type": "publicKey"
          },
          {
            "name": "gameId",
            "docs": [
              "Unique game ID (from casino.total_games at creation time)"
            ],
            "type": "u64"
          },
          {
            "name": "gameType",
            "docs": [
              "Game type"
            ],
            "type": {
              "defined": "GameType"
            }
          },
          {
            "name": "betAmount",
            "docs": [
              "Bet amount in lamports"
            ],
            "type": "u64"
          },
          {
            "name": "choice",
            "docs": [
              "Player's choice/input (meaning depends on game_type)",
              "CoinFlip: 0 = heads, 1 = tails",
              "Dice: target number (2-12)",
              "Slots: bet lines (unused for now, default = 1)"
            ],
            "type": "u8"
          },
          {
            "name": "status",
            "docs": [
              "Session status"
            ],
            "type": {
              "defined": "SessionStatus"
            }
          },
          {
            "name": "randomnessRequest",
            "docs": [
              "Randomness request data"
            ],
            "type": {
              "defined": "RandomnessRequest"
            }
          },
          {
            "name": "result",
            "docs": [
              "Result (populated after resolution)"
            ],
            "type": {
              "option": {
                "defined": "GameResult"
              }
            }
          },
          {
            "name": "createdAt",
            "docs": [
              "Creation timestamp"
            ],
            "type": "i64"
          },
          {
            "name": "resolvedAt",
            "docs": [
              "Resolution timestamp (if resolved)"
            ],
            "type": {
              "option": "i64"
            }
          },
          {
            "name": "bump",
            "docs": [
              "PDA bump"
            ],
            "type": "u8"
          }
        ]
      }
    }
  ],
  "types": [
    {
      "name": "RandomnessRequest",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "isMock",
            "docs": [
              "Whether this is a mock request (localnet only)"
            ],
            "type": "bool"
          },
          {
            "name": "requestId",
            "docs": [
              "Request signature or ID (for tracking)"
            ],
            "type": "string"
          },
          {
            "name": "switchboardRequest",
            "docs": [
              "Switchboard request account (if using real VRF)"
            ],
            "type": {
              "option": "publicKey"
            }
          }
        ]
      }
    },
    {
      "name": "GameResult",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "outcome",
            "docs": [
              "Game outcome (meaning depends on game_type)",
              "CoinFlip: 0 = heads, 1 = tails",
              "Dice: rolled number (2-12)",
              "Slots: packed result (3 reels, each 0-9)"
            ],
            "type": "u8"
          },
          {
            "name": "isWin",
            "docs": [
              "Whether player won"
            ],
            "type": "bool"
          },
          {
            "name": "payout",
            "docs": [
              "Payout amount in lamports (0 if loss)"
            ],
            "type": "u64"
          }
        ]
      }
    },
    {
      "name": "GameType",
      "type": {
        "kind": "enum",
        "variants": [
          {
            "name": "CoinFlip"
          },
          {
            "name": "Dice"
          },
          {
            "name": "Slots"
          }
        ]
      }
    },
    {
      "name": "SessionStatus",
      "type": {
        "kind": "enum",
        "variants": [
          {
            "name": "Pending"
          },
          {
            "name": "Resolved"
          },
          {
            "name": "Expired"
          }
        ]
      }
    }
  ],
  "errors": [
    {
      "code": 6000,
      "name": "CasinoPaused",
      "msg": "Casino is currently paused"
    },
    {
      "code": 6001,
      "name": "InvalidBetAmount",
      "msg": "Invalid bet amount - must be between min and max bet"
    },
    {
      "code": 6002,
      "name": "InsufficientPlayerFunds",
      "msg": "Player has insufficient funds for this bet"
    },
    {
      "code": 6003,
      "name": "InsufficientVaultLiquidity",
      "msg": "Vault has insufficient liquidity to cover potential payout"
    },
    {
      "code": 6004,
      "name": "Unauthorized",
      "msg": "Unauthorized: only casino authority can perform this action"
    },
    {
      "code": 6005,
      "name": "InvalidRandomnessCallback",
      "msg": "Invalid randomness callback - verification failed"
    },
    {
      "code": 6006,
      "name": "AlreadyResolved",
      "msg": "Game session already resolved"
    },
    {
      "code": 6007,
      "name": "Overflow",
      "msg": "Numeric overflow occurred"
    },
    {
      "code": 6008,
      "name": "SessionExpired",
      "msg": "Game session expired"
    },
    {
      "code": 6009,
      "name": "InvalidChoice",
      "msg": "Invalid choice - must be 0 (heads) or 1 (tails)"
    },
    {
      "code": 6010,
      "name": "MockVRFNotAllowed",
      "msg": "Mock VRF is only allowed on localnet"
    },
    {
      "code": 6011,
      "name": "SessionNotExpiredYet",
      "msg": "Session is not expired yet - cannot refund"
    },
    {
      "code": 6012,
      "name": "RandomnessAlreadyRequested",
      "msg": "Randomness has already been requested for this session"
    }
  ]
}